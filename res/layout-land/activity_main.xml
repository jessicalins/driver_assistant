<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFCFCF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="133dp"
        android:contentDescription="@string/desc_logo"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/bt_view_data"
        style="@style/ButtonText"
        android:background="@drawable/button_black"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="70dp"
        android:text="@string/view_data" />

    <Button
        android:id="@+id/bt_statistics"
        style="@style/ButtonText"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bt_view_data"
        android:background="@drawable/button_black"
        android:text="@string/stat" />

    <Button
        android:id="@+id/bt_config"
        style="@style/ButtonText"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/bt_view_data"
        android:layout_alignBottom="@+id/bt_view_data"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/bt_view_data"
        android:background="@drawable/button_black"
        android:text="@string/config" />

    <Button
        android:id="@+id/bt_about"
        style="@style/ButtonText"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/bt_statistics"
        android:layout_alignBottom="@+id/bt_statistics"
        android:layout_toRightOf="@+id/bt_statistics"
        android:background="@drawable/button_black"
        android:text="@string/about" />

</RelativeLayout>