<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#CFCFCF"
    tools:context=".MainActivity" >
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/desc_logo"
        android:src="@drawable/logo" />
    
    <Button
        android:id="@+id/bt_statistics"
        style="@style/ButtonText"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/bt_view_data"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_black"
        android:text="@string/stat" />
    
    <Button
        android:id="@+id/bt_config"
        style="@style/ButtonText"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/bt_statistics"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_black"
        android:text="@string/config" />

    <Button
        android:id="@+id/bt_about"
        style="@style/ButtonText"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/bt_config"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_black"
        android:text="@string/about" />

    <Button
        android:id="@+id/bt_view_data"
        style="@style/ButtonText"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/bt_statistics"
        android:layout_centerVertical="true"
        android:background="@drawable/button_black"
        android:text="@string/view_data" />

</RelativeLayout>